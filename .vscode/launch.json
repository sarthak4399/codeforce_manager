{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch Codeforces Manager",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/manager",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": true,
            "MIMode": "gdb",
            "miDebuggerPath": "/usr/bin/gdb",  
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "CMake Build"
        }
    ]
}
